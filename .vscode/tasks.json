{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "Compile Source",
            "command": "tsc",
            "isShellCommand": true,
            "args": ["-p", "./ts"],
            "showOutput": "always",
            "problemMatcher": "$tsc",
            "isBuildCommand": true
        },
        {
            "taskName": "Compile Tests",
            "command": "tsc",
            "isShellCommand": true,
            "args": ["-p", "./tests"],
            "showOutput": "always",
            "problemMatcher": "$tsc",
            "isBuildCommand": true
        }
    ]
}